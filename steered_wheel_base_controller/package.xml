  <build_depend>roscpp</build_depend>

  <run_depend>controller_interface</run_depend>
  <run_depend>roscpp</run_depend>

  <export>
    <controller_interface plugin="${prefix}/sw_base_controller_plugin.xml"/>
    <architecture_independent/>
  </export>
</package>
